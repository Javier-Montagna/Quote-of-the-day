apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: quote-deploy
spec:
  replicas: 2
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
      maxSurge: 1
  template:
    metadata:
      labels:
        app: quote-of-the-day
    spec:
      containers:
      - name: quote-pod
        image: gcr.io/snappy-sunset-198621/quote-of-the-day
        imagePullPolicy: Always
        env:
        - name: FORCING_REDEPLOY
          value: 'SALT_TO_BE_REPLACE_DURING_DEPLOYMENT'
        ports:
        - containerPort: 80
